{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "plugins": ["react", "import", "prettier", "babel"],
  "setting": {
    "import/resolver": {
      "webpack": {
        "config": {
          "resolve": {
            "extensions": ["", ".js", ".jsx"],
            "modules": ["src", ".", "node_modules"]
          }
        }
      }
    }
  }
}